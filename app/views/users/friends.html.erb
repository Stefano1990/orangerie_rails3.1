<% if current_user?(@user) %>
	<% @user.requested_contacts.each do |contact| %>
	<% @connection = Connection.conn(@user, contact) %>
		<img src="http://orangerieleclub.ch/img/contacts/kein_bild.jpg" alt="Userpic" width="60px" height="60px"/>
		<%= link_to contact.name, contact %>
		<%= semantic_form_for(@connection, :html => {:method => :put}) do |f| %>
			<%= f.buttons do %>
				<%= f.commit_button 'Annehmen' %>
				<%= f.commit_button 'Ablehnen', :id => nil %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
<ol class="friends">
	<%= render 'friends', :locals => { :friends => @friends } %>
</ol>
