$('#description')[0].innerHTML = "<%= @photo.description %>";
$('#description').append('<a class=\"rfloat penIcon\" id=\"descriptionEdit\"></a>');
$('div.description').hide();
$('#description').show();
$('#descriptionEdit').click(function(){
            $('#description').hide();
            $('div.description').show();
            $('#descriptionEdit').hide();
            return false;
});
